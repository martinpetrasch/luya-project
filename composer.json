{
    "name": "zephir/luya-kickstarter",
    "description": "The kickstarter for a new luya project.",
    "type": "project",
    "license":"MIT",
    "minimum-stability": "dev",
    "require": {
        "yiisoft/yii2": "2.0.*",
        "twig/twig" : "1.*",
        "bower-asset/jquery" : "2.*",
        "bower-asset/jquery-ui" : "1.*",
        "bower-asset/angular" : "1.3.10",
        "bower-asset/angular-resource": "1.3.10",
        "bower-asset/angular-ui-router" : "0.2.13",
        "bower-asset/angular-loading-bar" : "0.*",
        "bower-asset/angular-ui-ace" : "*",
        "bower-asset/angular-dragdrop" : "1.*",
        "bower-asset/ace-builds" : "1.1.8"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "application/assets": "0777"
                }
            ]
        },
        "asset-installer-paths": {
            "bower-asset-library": "vendor/bower"
        }
    },
    "autoload" : {
        "psr-4" : {
            "luya\\" : "../luya/src/",
            "admin\\" : "../luya/modules/admin",
            "cms\\" : "../luya/modules/cms",
            "cmsadmin\\" : "../luya/modules/cmsadmin"
        }
    }
}